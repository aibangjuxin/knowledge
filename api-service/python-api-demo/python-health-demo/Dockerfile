FROM python:3.9-slim

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

# We generate certs at build time or runtime? 
# Usually secrets are mounted. 
# For this demo image, we will assume certs are mounted or generated by a startup script.
# Let's simple copy the app and expect the user to mount certs or we generate them if missing.

EXPOSE 8443

CMD ["python", "app.py"]
