# GCE DR Validation Configuration
# Copy this file and customize for your environment

# Required: Your GCP configuration
export MIG_NAME="your-mig-name"
export REGION="europe-west2"
export PROJECT_ID="your-project-id"

# Optional: DR test parameters (defaults will be used if not set)
export INITIAL_SIZE=2
export SCALE_UP_SIZE=4
export TARGET_CPU_UTIL=0.9
export COOL_DOWN_PERIOD="180s"

# Zone configuration - adjust based on your region
export ZONE_TO_SIMULATE_FAILURE="${REGION}-a"

# Test timing (seconds)
export SCALE_WAIT_TIME=90
export FAILURE_WAIT_TIME=120